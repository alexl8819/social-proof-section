{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:tailwindcss/recommended"
    ],
    "overrides": [
        {
          "files": ["*.html", "*.blade.php"],
          "parser": "@angular-eslint/template-parser"
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "tailwindcss/no-custom-classname": [1, {
            "whitelist": ["attribution"]
        }]
    }
}
